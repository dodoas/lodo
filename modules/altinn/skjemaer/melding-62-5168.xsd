    <xs:element name="GevinstMvSomSkalTilleggesGevinstOgTapskontoForFjoraret-grp-1576">
        <xs:annotation>
            <xs:documentation>
                <brreg:tekst brreg:lang="NOB" brreg:teksttype="LEDE">
                    <p>Gevinst</p>
                </brreg:tekst>
