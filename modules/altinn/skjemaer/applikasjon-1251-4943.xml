                    <xforms:selectOne ref="/Skjema/OpplysningerOmOppgavegiver-grp-5849/Klagefrist-grp-5861/KlagemeldingSendtInnenKlagefrist-datadef-25454">
                        <xforms:choices>
                            <xforms:item>
                                <xforms:value>Ja</xforms:value>
                                <xforms:caption brreg:lang="EN">
