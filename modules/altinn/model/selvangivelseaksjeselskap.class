        	$this->setAccount('ContactName',       $this->_comanyInfo->CustomerPerson->FirstName . " " . $this->_comanyInfo->CustomerPerson->MiddleName . " " . $this->_comanyInfo->CustomerPerson->LastName);
        else
        	$this->setAccount('ContactName',       $this->_comanyInfo->CustomerPerson->FirstName . " " . $this->_comanyInfo->CustomerPerson->LastName);

        $this->setAccount('FVName',      $this->_comanyInfo->RegnskapCompany->VName);
        $this->setAccount('FVAddress',   $this->_comanyInfo->RegnskapCompany->VAddress);
        $this->setAccount('FVZipCode',   $this->_comanyInfo->RegnskapCompany->VZipCode);
        $this->setAccount('FVCity',      $this->_comanyInfo->RegnskapCompany->VCity);

        $this->setAccount('PreLikning', 'Nei');
        $this->setAccount('PreYear', $this->_thisYear);
        $this->setAccount('Kreditfradrag', 'Nei');
        $this->setAccount('IsExchange', 'Nei');
        $this->setAccount('FoundedDate', $this->IsFoundedThisYear($ComanyInfo->CustomerCompany->FoundedDate));
        $this->setAccount('OmdannelseENKANSKS', 'Nei');
        $this->setAccount('OmdannelseSkattefri', 'Nei');
        $this->setAccount('StiftetFisjon', 'Nei');
        $this->setAccount('FusjonSkattefri', 0);
        $this->setAccount('OverforingerSkattefrie', 'Nei');
        $this->setAccount('LigningSkattelov810', 'Nei');
        $this->setAccount('UtlanSelskap', 0);
        $this->setAccount('UtleieFormuesgjenstander', "Nei");
        $this->setAccount('SalgUttakFormuesgjenstander', "Nei");
        $this->setAccount('UtleieFormuesgjenstand', 'Nei');
        $this->setAccount('SalgFormuesgjenstander', 'Nei');
        $this->setAccount('AkjonarLaneopptak', 0);
        $this->setAccount('AksjonarLaneopptak', 0);
        $this->setAccount('390b', 'Nei');
        
        $this->setAccount('231',0);
